openapi: 3.1.0
info:
  title: NetHunt CRM + Google Tools via Zapier MCP
  version: 1.0.0
  description: Actions that allow a GPT to interact with NetHunt CRM, Gmail, Google Sheets, and Google Drive via Zapier MCP.

servers:
  - url: https://mcp.zapier.com/api/mcp/mcp

paths:
  /nethunt_crm_create_record:
    post:
      operationId: nethunt_crm_create_record
      summary: Create a new record in NetHunt CRM
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                folderId:
                  type: string
                  description: Folder ID where the record will be added
                timeZone:
                  type: string
                  description: User's timezone, e.g., America/Chicago
                fields:
                  type: object
                  description: Field-value pairs for the new record
      responses:
        '200':
          description: Record created

  /gmail_create_draft:
    post:
      operationId: gmail_create_draft
      summary: Create a draft email in Gmail
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                to:
                  type: string
                subject:
                  type: string
                body:
                  type: string
      responses:
        '200':
          description: Draft created

  /google_sheets_create_spreadsheet_row:
    post:
      operationId: google_sheets_create_spreadsheet_row
      summary: Add a row to a Google Sheet
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                spreadsheetId:
                  type: string
                worksheetName:
                  type: string
                rowData:
                  type: object
      responses:
        '200':
          description: Row created

  /google_drive_upload_file:
    post:
      operationId: google_drive_upload_file
      summary: Upload a file to Google Drive
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                fileName:
                  type: string
                fileContent:
                  type: string
                mimeType:
                  type: string
      responses:
        '200':
          description: File uploaded

components:
  securitySchemes:
    BearerAuth:
      type: http
      scheme: bearer

security:
  - BearerAuth: []
